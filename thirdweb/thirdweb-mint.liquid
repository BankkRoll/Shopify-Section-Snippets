{% comment %}
  --------------------------------------------------------------
    Section Name: thirdweb-mint-page
    Author: Bankkroll
    Description: Fully responsive section for thirdweb iframe minting.
    GitHub: https://github.com/BankkRoll/Shopify-Section-Snippets
    License: MIT
  --------------------------------------------------------------
{% endcomment %}

{%- style -%}
  .mint-page {
    display: flex;
    align-items: {{ section.settings.iframe_vertical_alignment }};
    justify-content: {{ section.settings.iframe_horizontal_alignment }};
    padding: {{ section.settings.padding }}px;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    width: 100%;
    height: {{ section.settings.container_height }}px;
  }

  .mint-page__iframe {
    width: {{ section.settings.iframe_width }}%;
    height: {{ section.settings.iframe_height }}px;
    border: {{ section.settings.iframe_border_width }}px solid {{ section.settings.iframe_border_color }};
    border-radius: {{ section.settings.iframe_border_radius }}px;
  }

  @media screen and (max-width: 767px) {
    .mint-page {
      align-items: {{ section.settings.mobile_iframe_vertical_alignment }};
      justify-content: {{ section.settings.mobile_iframe_horizontal_alignment }};
      padding: {{ section.settings.mobile_padding }}px;
      height: {{ section.settings.mobile_container_height }}px;
    }
    .mint-page__iframe {
      width: {{ section.settings.mobile_iframe_width }}%;
      height: {{ section.settings.mobile_iframe_height }}px;
      border-width: {{ section.settings.mobile_iframe_border_width }}px;
      border-radius: {{ section.settings.mobile_iframe_border_radius }}px;
    }
  }
{%- endstyle -%}

<div class="mint-page">
  <iframe class="mint-page__iframe" src="{{ section.settings.iframe_src }}" frameborder="0"></iframe>
</div>

{% schema %}
